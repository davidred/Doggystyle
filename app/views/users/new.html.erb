<h2>Sign Up!</h2>

<form action="<%= users_url %>" method="POST">
  <%= form_auth %>
  <label for="gender">Gender</label>
  <select name="user[gender]" id="gender">
    <option value="1">Male</option>
    <option value="2">Female</option>
  </select>

  <br>
  <br>
  <label for="breed">Breed</label>
  <select id="breed" name="user[breed]">
    <% @user.breeds.each do |breed_id, breed_name| %>
      <option value="<%= breed_id %>" <%= "selected" if @user.breed == breed_id %>><%= breed_name %></option>
    <% end %>
  </select>

  <br>
  <br>
  <label for="country">Country</label>
  <select id="country" name="user[country]">
    <% @user.countries.each do |country_id, country_name| %>
      <option value="<%= country_id %>" <%= "selected" if @user.country == country_id %>><%= country_name %></option>
    <% end %>
  </select>

  <br>
  <br>
  <label for="zip">Zip Code</label>
  <input type="text"
         id="zip"
         name="user[zip]"
         value="<%= @user.zip %>">

  <br>
  <br>
  <label for="email">Email</label>
  <input type="text"
         id="email"
         name="user[email]"
         value="<%= @user.email %>">

   <br>
   <br>
   <label for="username">Username</label>
   <input type="text"
          id="username"
          name="user[username]"
          value="<%= @user.username %>">

  <br>
  <br>
  <label for="password">Password</label>
  <input type="password"
         id="password"
         name="user[password]">

  <br>
  <br>
  <input type="submit" value="Sign Up">

</form>