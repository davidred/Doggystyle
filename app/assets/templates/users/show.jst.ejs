	              <% }; %>
	            </select>
	          </li>
	          <li class="gender">
	            <label for="gender">Gender</label>
	            <select name="user[gender]" id="gender">
	              <option value="1"
								<% if ( "Male" === user.escape('gender_name')) { %>
								selected="selected"
								<% } %>
								>Male</option>
	              <option value="2"
								<% if ( "Female" === user.escape('gender_name')) { %>
								selected="selected"
								<% } %>
								>Female</option>
	            </select>
	          </li>
	          <li class="zip">
	            <br>
