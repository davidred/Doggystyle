	<script>
		var delay = 5000;
		var item = 1;

		var loop = function() {
			item++;
			if (item === 6) {
				item = 1;
				$('.carousel > ul').removeClass('focus2 focus3 focus4 focus5');
			}
			var focus = "focus" + item;
			$('.carousel > ul').addClass(focus);
		}

		window.setInterval(loop, delay);
	</script>
	
