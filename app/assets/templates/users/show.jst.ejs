
<header class="profile-header content-header">

  <div class="profile-basic-group group">
		<a href="javascript.void(0)" class="js-show-modal" data-modal="basic-info-modal">
    <figure class="profile-picture">
      <img src="../../assets/images/puppy.jpg">
		</figure>
    <div class="profile-basic-info">
      <h1><%= user.escape('username') %></h1>
      <ul class="profile-basic-info-list group">
        <li><%= user.escape('breed_name') %></li>
        <li>&#8226</li>
        <li><%= user.escape('gender_name') %></li>
        <li>&#8226</li>
        <li><%= user.escape('country_name') %></li> <!--Change to geocoded location -->
      </ul>
    </div>
		</a>
  </div>
  <!-- < if user != current_user %> -->
  <div>
		Link to Send Message
		<!-- link_to "Send Message", new_user_message_url(@user) %> -->
  </div>
  <!-- < end %> -->
</header>

<nav class="content-nav profile-nav">
  <ul class="content-nav-list group">
    <li><a href='javascript.void(0)'>About</a></li>
    <li><a href='javascript.void(0)'>Photos</a></li>
  </ul>
</nav>

<section class="profile-content section-content group">

  <section class="profile-content-left">

    <section class="detailed-info">
			<h3>About Me</h3>
      <div class="user-summary">
        <h4>My Self Summary</h4>
        <p><%= user.escape('summary') %></p>
      </div>

      <div class="user-age-size group">
        <div class="user-age">
          <h4>Age</h4>
          <p><%= user.escape('age') %></p>
        </div>
        <div class="user-size">
          <h4>Size</h4>
          <p><%= user.escape('size_name') %></p>
        </div>
      </div>

      <div class="user-play_style-energy_level group">
        <div class="user-play_style">
          <h4>Play Style</h4>
          <p><%= user.escape('play_style_name') %></p>
        </div>
        <div class="user-energy_level">
          <h4>Energy Level</h4>
          <p><%= user.escape('energy_level_name') %></p>
        </div>
      </div>

    </section>
  </section>

  <section class="profile-content-right">

    <section class="looking-for">
      <a href="javascript.void(0)" class="js-show-modal" data-modal="looking-for-modal">
        <h3>Looking For</h3>
        <ul>

          <li>
  					<span>Info: &nbsp</span>
  					<% user.preferred().sizes.forEach(function(size) { %>
  						<%= this.model.sizes[size] %>,
  					<% }.bind(this)); %>
  				</li>
  				<li>
  					<span>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp</span>
  					<% user.preferred().genders.forEach(function(gender) { %>
  						<%= this.model.genders[gender] %>
  					<% }.bind(this)); %>
  					<% user.preferred().breeds.forEach(function(breed) { %>
  						<%= this.model.breeds[breed] %>s
  					<% }.bind(this)); %>
  				</li>
          <li>
  					<span>For: &nbsp</span>
  					<% user.preferred().play.forEach(function(playtype) { %>
  						<%= this.model.play[playtype] %>
  					<% }.bind(this)); %>
  				</li>
          <li>
  						<!-- Implement near me -->
  				</li>
        </ul>
      </a>
    </section>

    <section class="owner-info">
      <a href="javascript.void(0)" class="js-show-modal" data-modal="owner-info-modal">
        <h3>My Person</h3>
        <ul>
          <li>
            <figure class="owner-photo">

            </figure>
          </li>
          <li><%= user.escape('owner_name') %></li>
          <li><%= user.escape('owner_age') %></li>
          <li><%= user.escape('owner_gender_name') %></li>
        </ul>
      </a>
    </section>

		<section id="basic-info-modal" class="modal">
			<article class="modal-content">
				<span class="modal-close js-hide-modal"
              data-modal="basic-info-modal">&times;</span>

				<h1>Basic Info</h1>
				<form class="test">
	        <ul class="basic-info-list">
	          <li class="breed">
	            <br>
	            <br>
	            <label for="breed">Breed</label>
	            <select id="breed" name="user[breed]">
	              <% for(var prop in user.breeds) { %>
	                <option value="<%= prop %>"
										<% if (user.breeds[prop] === user.escape('breed_name')) { %>
										selected="selected"
										<% } %>
										><%= user.breeds[prop] %></option>
	              <% }; %>
	            </select>
	          </li>
	          <li class="gender">
	            <label for="gender">Gender</label>
	            <select name="user[gender]" id="gender">
	              <option value="1"
								<% if ( "Male" === user.escape('gender_name')) { %>
								selected="selected"
								<% } %>
								>Male</option>
	              <option value="2"
								<% if ( "Female" === user.escape('gender_name')) { %>
								selected="selected"
								<% } %>
								>Female</option>
	            </select>
	          </li>
	          <li class="zip">
	            <br>
	            <br>
	            <label for="zip">Zip Code</label>
	            <input type="text"
	                   id="zip"
	                   name="user[zip]"
	                   value="<%= user.escape('zip') %>">
	          </li>
	          <li class="country">
	            <br>
	            <br>
	            <label for="country">Country</label>
	            <select id="country" name="user[country]">
								<% for (var prop in user.countries) { %>
									<option value="<%= prop %>"
									<% if(user.countries[prop] === user.escape('country_name')) { %>
									selected="selected"
									<% } %>
									><%= user.countries[prop] %></option>
								<% } %>
	            </select>
	          </li>
	        </ul>
					<input type="submit"
                 class="modal-btn save"
                 value="Save">
					<button class="modal-btn cancel js-hide-modal"
                  data-modal="basic-info-modal">Cancel</button>

				</form>

			</article>
			<div class="modal-screen js-hide-modal"></div>
		</section>

		<section id="looking-for-modal" class="modal">
			<article class="modal-content">
				<span class="modal-close js-hide-modal"
              data-modal="looking-for-modal">&times;</span>

				<h1>Looking For</h1>
				<form class="looking-for-form">
	        <ul class="looking-for-list">
	          <li class="breed">
	            <br>
	            <br>
	            <label for="breed">Breed</label>
	            <select id="breed" name="user[breed]">
	              <% for(var prop in user.breeds) { %>
	                <option value="<%= prop %>"
