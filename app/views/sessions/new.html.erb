<form class="sign-up-1" action="<%= session_url %>" method="POST">
  <%= form_auth %>

	<h1>Sign In</h1>

	<ul class="sign-in-content-list group">

		<li class="form-input sign-in-input">
				<label for="username">Username</label>
				<input type="text"
							id="username"
							name="user[username]">
		</li>

		<li class="form-input sign-in-input">
				<label for="password">Password</label>
				<input type="password"
							id="password"
							name="user[password]">
		</li>

		<li>
			<button type="submit" class="sign-in-button">Sign in</button>
		</li>
	</ul>

