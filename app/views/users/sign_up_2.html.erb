<div class="sign-up-heading">
  <h1>Almost there! Just two more steps</h1>
</div>

<div class="sign-up-content">
  <form class="sign-up-2" action="<%= new_user_url %>" method="POST">
    <%= form_auth %>

    <ul class="sign-up-content-list group">
      <li>
        <a href="/auth/facebook">LOGIN WITH FACEBOOK</a>
      </li>

      <li>
       	<h3>OR</h3>
      </li>

      <li>
        <label for="country">Country</label>
        <select id="country" name="user[country]">
          <% @user.countries.each do |country_id, country_name| %>
            <option value="<%= country_id %>" <%= "selected" if @user.country == country_id %>><%= country_name %></option>
          <% end %>
        </select>
      </li>

      <li>
        <label for="zip">Zip Code</label>
        <input type="text"
               id="zip"
               name="user[zip]"
               value="<%= @user.zip %>">
      </li>

      <li>
        <label for="email">Email</label>
        <input type="text"
               id="email"
               name="user[email]"
               value="<%= @user.email %>">
      </li>


  		<li>
  			<button type="submit" class="continue">Continue</button>
  		</li>

    </ul>

  </form>
</div>