<h1>Sign Up 2</h1>

<form action="<%= new_user_url %>" method="POST">
  <%= form_auth %>

  <a href="/auth/facebook">LOGIN WITH FACEBOOK</a>

	<h3>OR</h3>

  <br>
  <br>
  <label for="country">Country</label>
  <select id="country" name="user[country]">
    <% @user.countries.each do |country_id, country_name| %>
      <option value="<%= country_id %>" <%= "selected" if @user.country == country_id %>><%= country_name %></option>
    <% end %>
  </select>

  <br>
  <br>
  <label for="zip">Zip Code</label>
  <input type="text"
         id="zip"
         name="user[zip]"
         value="<%= @user.zip %>">

  <br>
  <br>
  <label for="email">Email</label>
  <input type="text"
         id="email"
         name="user[email]"
         value="<%= @user.email %>">

  <br>
  <br>
  <input type="submit" value="Continue">

</form>