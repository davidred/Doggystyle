<form class="sign-up-1" action="<%= users_url %>" method="POST">
  <%= form_auth %>

  <h1>Last step! Woof!</h1>

  <ul class="sign-up-content-list group">
    <li>
      <div class="text-input">
      <label for="username">Username</label>
      <input type="text"
             id="username"
             name="user[username]"
             value="<%= @user.username %>">
      </div>
    </li>

    <li>
      <div class="text-input">
      <label for="password">Password</label>
      <input type="password"
             id="password"
    				 value=""
             name="user[password]">
      </div>
    </li>

    <li>
      <button type="submit" class="continue">Done!</button>
    </li>
  </ul>

</form>
